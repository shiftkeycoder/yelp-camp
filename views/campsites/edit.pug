- var ICON = "../../icons/favicon.ico";
- var CSS = "../../main.cb6d322ebb9fa0dbd79f.css";
- var FORM = "../../form-validation.js";
- var TITLE = "YelpCamp: Camp Edit";
html(lang="en")
  include ../lib/head.pug 
  body
    script(src=VENDOR) 
    include ../lib/vendor.pug  
    include ../lib/header.pug 
    .container.my-5.pt-5 
      div 
        a(href="/campsites/"+record._id) 
          span.fal.fa-house-return.mr-2  
          span Back to Member
      form.validated-form(action="/campsites/"+record._id+"?_method=PUT", method="post" novalidate) 
        .mb-3 
          label.form-label(for="title") Title
          input.form-control(type="text" id="title" name="campsite[title]" value=record.title required)
          .valid-feedback 
              p Looks good!
          .invalid-feedback 
              p This field is required 
        .mb-3 
          label.form-label(for="image") Image URL
          input.form-control(type="text" id="image" name="campsite[image]" value=record.image required)
          .valid-feedback 
              p Looks good!
          .invalid-feedback 
              p This field is required 
        .mb-3 
          label.form-label(for="price") Price
          .input-group 
              span.input-group-text(id="price-label") $
              input.form-control(type="text" id="price" name="campsite[price]" value=record.price required)
              .valid-feedback 
                p Looks good!
              .invalid-feedback 
                p This field is required 
        .mb-3 
          label.form-label(for="description") Description
          textarea.form-control(cols="30", rows="5" type="text" id="description" name="campsite[description]" required) #{record.description}
          .valid-feedback 
            p Looks good!
          .invalid-feedback 
            p This field is required 
        .mb-3  
          label.form-label(for="location") Location
          input.form-control(type="text" id="location" name="campsite[location]" value=record.location required)
          .valid-feedback 
            p Looks good!
          .invalid-feedback 
            p This field is required 
        button.btn.btn-info(type="submit") Update Campsite
    include ../lib/footer.pug 